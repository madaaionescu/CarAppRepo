{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Routes list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Latstart</th>
                <th>Longstart</th>
                <th>Latstop</th>
                <th>Longstop</th>
                <th>Datecreated</th>
                <th>Ownerid</th>
                <th>Seatsavailable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('routes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.latStart }}</td>
                <td>{{ entity.longStart }}</td>
                <td>{{ entity.latStop }}</td>
                <td>{{ entity.longStop }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.ownerId }}</td>
                <td>{{ entity.seatsAvailable }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('routes_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('routes_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('routes_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
